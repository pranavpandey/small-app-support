<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sas_dialog_list_margin_start"
        android:layout_marginRight="@dimen/sas_dialog_list_margin_end_small"
        android:layout_marginStart="@dimen/sas_dialog_list_margin_start"
        android:layout_marginEnd="@dimen/sas_dialog_list_margin_end_small"
        android:layout_marginTop="@dimen/sas_dialog_margin_top"
        android:layout_marginBottom="@dimen/sas_dialog_margin_bottom"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <com.pranavpandey.smallapp.view.ColoredImageView
            android:id="@+id/action_icon"
            android:layout_width="@dimen/sas_list_avatar_width_small"
            android:layout_height="@dimen/sas_list_avatar_height_small"
            android:contentDescription="@string/sas_app_name"
            android:scaleType="centerInside"
            app:colorType="none"
            app:backgroundAware="true" />

        <com.pranavpandey.smallapp.view.ColoredTextView
            android:id="@+id/action_title"
            android:layout_marginLeft="@dimen/sas_list_avatar_text_margin_start_small"
            android:layout_marginStart="@dimen/sas_list_avatar_text_margin_start_small"
            style="@style/TextAppearance.Dialog.ActionItem" />

    </LinearLayout>

</LinearLayout>
